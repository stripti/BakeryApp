<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abc"
    tools:context="com.example.user.bakeryapp.AddProduct">
    <Spinner
        android:id="@+id/sp"
        android:layout_width="264dp"
        android:layout_height="57dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="60dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtView1"
        android:layout_width="233dp"
        android:layout_height="66dp"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="250dp"
        android:hint="Enter product's price(in Rs)!!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="91dp">

        <EditText
            android:id="@+id/txtprice"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:inputType="number" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="**Add it**"
        android:onClick="addproduct"
        android:background="#f2d8c8"
        android:textColor="#ff134e"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="381dp"
        android:layout_marginLeft="159dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtView"
        android:layout_width="233dp"
        android:layout_height="66dp"
        android:layout_marginLeft="91dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="143dp"
        android:hint="Enter product's name!!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/txtpname"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="109dp" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#a711c6"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:text="**Choose the category in which to add the product**"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-1dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
