<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/index"
    tools:context="com.example.user.bakeryapp.Login">
    <TextView
        android:id="@+id/txtmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAlignment="center"
        android:fontFamily="cursive"
        android:textColor="#f18818"
        android:text="**Please type your id and password**"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="149dp"
        android:layout_height="55dp"
        android:text="Submit"
        android:onClick="submit"
        android:background="#1692f1"
        android:textColor="#d9d7d7"
        android:textSize="25dp"
        android:fontFamily="cursive"
        android:layout_weight="0.05"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="314dp"
        android:layout_marginLeft="108dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="233dp"
        android:layout_height="66dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="102dp"
        android:hint="Enter user id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/txtuserid"
            android:layout_width="match_parent"
            android:layout_height="66dp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="231dp"
        android:layout_height="57dp"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="227dp"
        android:hint="Enter user pass"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/txtuserpass"
            android:layout_width="251dp"
            android:layout_height="59dp"
            android:inputType="numberPassword" />
    </android.support.design.widget.TextInputLayout>
</android.support.constraint.ConstraintLayout>
